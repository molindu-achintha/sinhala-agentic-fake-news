{
    "manifest_version": 3,
    "name": "Sinhala Fake News Detector",
    "version": "1.0",
    "description": "Select text and verify Sinhala news credibility via Agentic AI.",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}